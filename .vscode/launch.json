{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "C Debug (GDB)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/lex/a.out",   // 可执行文件路径
      "args": [],                             // 程序运行参数，可以自己填
      "stopAtEntry": false,                   // 是否在 main 停住
      "cwd": "${workspaceFolder}",            // 工作目录
      "environment": [],
      "externalConsole": false,                // 用外部终端显示输入输出
      "MIMode": "gdb",                        // 使用 gdb 调试
      "miDebuggerPath": "/usr/bin/gdb",       // gdb 的路径
    }
  ]
}